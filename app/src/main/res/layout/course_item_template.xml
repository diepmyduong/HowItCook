<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView android:id="@+id/img_course_item"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/categories_1"/>
    <TextView android:id="@+id/txt_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@id/img_course_item"
        android:text="Title"
        android:textSize="24sp"
        android:padding="8dp"
        android:textColor="#000"/>
    <TextView android:id="@+id/txt_course_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_below="@id/txt_course_title"
        android:layout_toRightOf="@id/img_course_item"
        android:paddingLeft="8dp"
        android:maxLines="2"
        android:textColor="#000"
        />

</RelativeLayout>
